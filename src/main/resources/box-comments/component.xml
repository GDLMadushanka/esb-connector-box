<component name="box-comments" type="synapse/template">
    <subComponents>
        <component name="createComment">
            <file>createComment.xml</file>
            <description>Used to add a comment by the user to a specific file or comment (i.e. as a
                reply comment).
            </description>
        </component>
        <component name="updateComment">
            <file>updateComment.xml</file>
            <description>Used to update the message of the comment.</description>
        </component>
        <component name="getComment">
            <file>getComment.xml</file>
            <description>Used to retrieve the message and metadata about a specific comment.
            </description>
        </component>
        <component name="deleteComment">
            <file>deleteComment.xml</file>
            <description>Permanently deletes a comment.</description>
        </component>
    </subComponents>
</component>